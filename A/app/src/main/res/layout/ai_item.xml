<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/list_item_color_bg"
	xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:background="#FFFFFF"
    android:descendantFocusability="blocksDescendants"  
    >
           
    <com.scb.administrator.a.CircleImageView
        android:id="@+id/user_logo"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:scaleType="centerInside"
		android:layout_margin="5dp"
        android:src="@drawable/ic_default_avatar_lite"
        />
	<TextView 
	    android:id="@+id/user_name"
   android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/user_logo"
	    android:text="岁月抚伤"
		android:textSize="14sp"
		android:scaleX="1.0"

		android:layout_alignBaseline="@+id/user_logo"
	    android:gravity="center_vertical"
		android:layout_marginTop="21dp"
	    android:layout_marginLeft="14dp"
	    />

	<TextView 
	    android:id="@+id/title_text"
android:layout_height="wrap_content"
	   android:layout_width="match_parent"
android:paddingRight="35dp"
		android:textColor="#11800A"
	    android:layout_below="@id/user_name"
	    android:layout_marginTop="14dp"
		android:textSize="15sp"
		android:scaleX="1.0"
android:layout_marginBottom="2dp"
        android:layout_marginLeft="67dp"
	    />
	<TextView

		android:id="@+id/reply_text"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:textSize="10sp"
		android:layout_below="@id/title_text"
		android:layout_marginTop="16dp"
     android:paddingBottom="4dp"
		android:scaleX="1.0"
		android:layout_marginLeft="69dp"

		/>


	<TextView
	    android:id="@+id/item_action_comment"
	    android:layout_width="19dp"
	    android:layout_height="19dp"
	    android:layout_alignParentRight="true"
	    android:layout_below="@id/title_text"

	    android:gravity="center"
	    android:text="99"
		android:scaleX="1.0"
		android:textSize="11sp"
		android:alpha="0.8"
		android:textColor="#ffffff"
		android:background="@drawable/textviewback"


	    android:layout_marginLeft="12dp"
	    android:layout_marginRight="6dp"

	    />



</RelativeLayout>
</LinearLayout>